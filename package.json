{
    "name": "@doggo/root",
    "version": "0.0.1",
    "private": true,
    "description": "Doggo is a dogfighting simulation card game, that stores cards as NFTs on the blockchain.",
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "@polkadot/api": "10.11.2",
        "@polkadot/api-contract": "10.11.2",
        "@polkadot/keyring": "12.6.2",
        "@polkadot/util": "12.6.2",
        "@polkadot/util-crypto": "12.6.2",
        "@polkadot/extension-dapp": "0.46.6",
        "commander": "11.1.0",
        "chalk": "5.3.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "marked": "11.2.0",
        "marked-terminal": "6.2.0"
    },
    "devDependencies": {
        "concurrently": "8.2.2",
        "typescript": "5.3.3",
        "del-cli": "5.1.0",
        "cpy-cli": "5.0.0",
        "esbuild": "0.19.12",
        "@types/node": "20.11.6",
        "pkg": "5.8.1",
        "node-notifier": "10.0.1",
        "@types/react": "18.2.48",
        "@types/react-dom": "18.2.18",
        "@types/marked-terminal": "6.1.0"
    },
    "scripts": {
        "build:docs": "npm run -w @doggo/docs build",
        "clean": "concurrently \"npm run clean:lib\" \"npm run clean:product\"",
        "cli": "npm run -w @doggo/cli start",
        "dev:contract-node": "npm run -w @doggo/contract-node start",
        "dev:docs": "npm run -w @doggo/docs dev",
        "dev": "concurrently \"npm run dev:docs\" \"npm run dev:contract-node\" -n \"docs,contract-node\"",
        "build:doggo": "npm run -w @doggo/contract-doggo-rust build && npm run -w @doggo/contract-doggo-deployer build && npm run -w @doggo/contract-doggo-cli build",
        "build:doggo-rust": "npm run -w @doggo/contract-doggo-rust build",
        "build:doggo-deployer": "npm run -w @doggo/contract-doggo-deployer build",
        "build:doggo-cli": "npm run -w @doggo/contract-doggo-cli build",
        "build:doggo-battle-ui": "npm run -w @doggo/app-doggo-battle-ui build",
        "build:doggo-card-ui": "npm run -w @doggo/app-doggo-card-ui build",
        "build:doggo-member-ui": "npm run -w @doggo/app-doggo-member-ui build",
        "build": "npm run build:doggo && concurrently \"npm run build:doggo-battle-ui\" \"npm run build:doggo-card-ui\" \"npm run build:doggo-member-ui\" -n \"doggo-battle-ui,doggo-card-ui,doggo-member-ui\" && npm run notify -- -- -t \"@doggo/root\" -m \"build completed\"",
        "build:cli": "npm run build:doggo-cli",
        "build:rust": "npm run build:doggo-rust",
        "build:deployer": "npm run build:doggo-deployer",
        "build:apps": "concurrently \"npm run build:doggo-battle-ui\" \"npm run build:doggo-card-ui\" \"npm run build:doggo-member-ui\" -n \"doggo-battle-ui,doggo-card-ui,doggo-member-ui\"",
        "build:dev": "npm run build:rust && npm run build:deployer && npm run deploy && npm run build:apps && npm run build:cli && npm run notify -- -- -t \"@doggo/root\" -m \"build:dev completed\"",
        "watch:doggo-cli": "npm run -w @doggo/contract-doggo-cli watch",
        "watch:doggo": "concurrently \"npm run watch:doggo-cli\" -n \"cli\"",
        "watch:doggo-battle-ui": "npm run -w @doggo/app-doggo-battle-ui watch",
        "serve:doggo-battle-ui": "npm run -w @doggo/app-doggo-battle-ui serve",
        "watch:doggo-card-ui": "npm run -w @doggo/app-doggo-card-ui watch",
        "serve:doggo-card-ui": "npm run -w @doggo/app-doggo-card-ui serve",
        "watch:doggo-member-ui": "npm run -w @doggo/app-doggo-member-ui watch",
        "serve:doggo-member-ui": "npm run -w @doggo/app-doggo-member-ui serve",
        "watch:sc": "npm run watch:doggo",
        "watch:apps": "concurrently \"npm run watch:doggo-battle-ui\" \"npm run watch:doggo-card-ui\" \"npm run watch:doggo-member-ui\" -n \"doggo-battle-ui,doggo-card-ui,doggo-member-ui\"",
        "serve:apps": "concurrently \"npm run serve:doggo-battle-ui\" \"npm run serve:doggo-card-ui\" \"npm run serve:doggo-member-ui\" -n \"doggo-battle-ui,doggo-card-ui,doggo-member-ui\"",
        "watch": "concurrently \"npm run watch:sc\" \"npm run watch:apps\" -n \"watch\"",
        "serve": "concurrently \"npm run serve:apps\" -n \"serve\"",
        "deploy:doggo-dev": "npm run -w @doggo/contract-doggo-deployer start -- -e dev -o ../contract-doggo-dev/src",
        "deploy:doggo-prod": "npm run -w @doggo/contract-doggo-deployer start -- -e prod -o ../contract-doggo-prod/src",
        "deploy:doggo": "npm run deploy:doggo-dev && npm run deploy:doggo-prod",
        "deploy": "npm run deploy:doggo ",
        "cli:doggo": "npm run -w @doggo/contract-doggo-cli start",
        "package:doggo": "npm run -w @doggo/contract-doggo-cli package",
        "package": "npm run package:doggo ",
        "install:linux": "npm run -w @doggo/contract-doggo-cli install:linux ",
        "notify": "npm run -w @doggo/notify start"
    }
}