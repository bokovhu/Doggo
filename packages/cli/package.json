{
    "name": "@doggo/cli",
    "description": "The cli distribution of the game",
    "version": "0.0.1",
    "main": "compiled/index.js",
    "private": true,
    "dependencies": {
        "react": "*",
        "react-dom": "*",
        "three": "*",
        "rxjs": "*",
        "brain.js": "*",
        "@polkadot/api": "*",
        "@polkadot/api-contract": "*",
        "@polkadot/extension-dapp": "*",
        "commander": "*",
        "marked": "*",
        "marked-terminal": "*",
        "@doggo/card-game": "*"

    },
    "devDependencies": {
        "@types/three": "*",
        "@types/react": "*",
        "@types/react-dom": "*",
        "@types/marked-terminal": "*",
        "typescript": "*",
        "esbuild": "*",
        "del-cli": "*"
