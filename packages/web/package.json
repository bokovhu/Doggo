{
    "name": "@doggo/web",
    "description": "The web distribution of the game",
    "version": "0.0.1",
    "main": "compiled/index.js",
    "types": "types/index.d.ts",
    "private": true,
    "dependencies": {
        "react": "*",
        "react-dom": "*",
        "three": "*",
        "rxjs": "*",
        "brain.js": "*",
        "@polkadot/api": "*",
        "@polkadot/api-contract": "*",
        "@polkadot/extension-dapp": "*",
        "@doggo/app-main-menu": "*",
        "@doggo/app-match": "*",
        "@doggo/app-inventory": "*",
        "@doggo/app-play": "*",
        "@doggo/app-train": "*",
        "@doggo/router": "*"

    },
    "devDependencies": {
        "@types/three": "*",
        "@types/react": "*",
        "@types/react-dom": "*",
        "typescript": "*",
        "esbuild": "*"
    },
    "scripts": {
        "build": "node scripts/before-build.js && esbuild src/index.tsx --bundle --jsx=automatic --loader:.js=jsx --sourcemap --outdir=dist --platform=browser",
        "watch": "node scripts/before-build.js && esbuild src/index.tsx --bundle --jsx=automatic --loader:.js=jsx --sourcemap --outdir=dist --platform=browser --watch",
        "start": "echo \"No start script provided\"",
        "serve": "node scripts/before-build.js && esbuild src/index.tsx --bundle --jsx=automatic --loader:.js=jsx --sourcemap --outdir=dist --platform=browser --serve=0.0.0.0:8080 --servedir=dist"
    }
}